#!/usr/bin/perl -w

use strict;

(my $ME = $0) =~ s@.*/@@;
my $USAGE = qq(USAGE: $ME [count]
	"count" is the number of simultaneous connections to use
	The default count is 6.
);

my $count = shift || 6;
# Make sure we have a valid value passed in
unless ( $count =~ /^\d+$/ and $count > 0 ) { $count = 6; }

unless ( -d "$ENV{HOME}/hits" ) {
	mkdir "$ENV{HOME}/hits" or die "Couldn't create target directory: $!\n";
}
mkdir "$ENV{HOME}/hits/$$" or die "Coudn't create run directory $$: $!\n";
my @hosts = <DATA>;
chomp @hosts;

die "Don't have that many hosts.\n" if $count > $#hosts;
my @tops;
my $top = 0;
for ( my $i = 0; $i < $#hosts; $i++ ) {
	push @{$tops[ $top % $count ] }, $hosts[$i];
	$top++;
}

my $HERE = `pwd`;

chdir "$ENV{HOME}/hits/$$" or die "Couldn't change to work directory: $!\n";
my $run = 1;
foreach my $list ( @tops ) {
	my $file = "run" . $run++;
	system( "$ENV{HOME}/bin/hit_servers -Dv @{$list} > $file &\n\n");
}

chdir $HERE;
print "fini\n";

